<resources>


    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/candeo_primary</item>
        <item name="colorPrimaryDark">@color/candeo_primary_dark</item>
        <item name="colorAccent">@color/candeo_accent_light</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">@color/candeo_primary</item>
        <item name="colorPrimaryDark">@color/candeo_primary_dark</item>
        <item name="colorAccent">@color/candeo_accent_light</item>
        <item name="android:typeface">serif</item>
    </style>
    <style name="AppTheme.Light.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:typeface">serif</item>
    </style>

</resources>
