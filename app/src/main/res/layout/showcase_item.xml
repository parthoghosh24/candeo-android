<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="360dp"
    android:clipToPadding="false"
    app:cardCornerRadius="4dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="4dp"
    android:layout_margin="3dp"
    app:cardElevation="5dp"
    app:cardBackgroundColor="@color/candeo_primary_dark">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

        <RelativeLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:padding="5dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentTop="true">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:gravity="left">

                    <TextView
                        android:id="@+id/candeo_inspired_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3.4K"
                        android:textSize="25sp"/>

                    <TextView
                        android:id="@+id/candeo_inspired_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="INSPIRED"
                        android:textSize="25sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:gravity="right">

                    <TextView
                        android:id="@+id/candeo_appreciated_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2.4K"
                        android:textSize="25sp"/>

                    <TextView
                        android:id="@+id/candeo_appreciated_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="APPRECIATED"
                        android:textSize="25sp"/>

                </LinearLayout>

            </LinearLayout>

            <FrameLayout
                android:id="@+id/showcase_details_holder"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        >
                        <ImageView
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:background="@drawable/roundedbutton"/>

                     </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="center"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/candeo_copyright_icon"
                                android:text="c"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textSize="15sp"
                                />

                            <TextView
                                android:id="@+id/candeo_user_name"
                                android:text="Partho Ghosh"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_marginLeft="5dp"
                                android:textSize="15sp"
                                />

                         </LinearLayout>


                        <TextView
                            android:text="My Awesome Creation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="20sp"
                            />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="5dp"
                            android:gravity="left">

                            <TextView
                                android:id="@+id/candeo_showcase_carousel_icon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ICON"
                                android:textSize="20sp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="5dp"
                            android:gravity="right">

                            <TextView
                                android:id="@+id/candeo_showcase_carousel_days"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2 days ago"
                                android:textSize="20sp"/>

                        </LinearLayout>

                    </LinearLayout>



                </LinearLayout>

            </FrameLayout>


        </RelativeLayout>



    </FrameLayout>

</android.support.v7.widget.CardView>