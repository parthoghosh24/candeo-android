<LinearLayout
    android:id="@+id/candeo_shout_post_holder"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:minWidth="300dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="5dp"
    android:paddingLeft="5dp"
    android:paddingEnd="5dp"
    android:paddingRight="5dp"
    android:background="@color/candeo_white"
    android:gravity="center"
    tools:context="com.candeo.app.shout.ShoutPostFragment"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:gravity="center">

        <TextView
            android:id="@+id/candeo_shout_post_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/candeo_checked_green"
            android:textStyle="bold"
            android:text="PUBLIC"/>

        <TextView
            android:id="@+id/candeo_shout_post_type_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textColor="@color/candeo_checked_green"
            android:textStyle="bold"
            android:text="PUBLIC"/>
    </LinearLayout>

    <TextView
        android:id="@+id/candeo_shout_post_total_participants"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:textColor="@color/candeo_private_red"
        android:text="Total Particiapnts are "/>

    <EditText
        android:id="@+id/candeo_shout_post_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="10"
        android:maxLines="300"
        android:padding="5dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        android:textColor="@color/candeo_primary_dark"
        android:textSize="13sp"
        android:textColorHint="@color/candeo_primary"
        android:background="@android:color/transparent"
        android:hint="Shout out (Max 250 chars)"
        android:gravity="top|left"
        android:maxLength="250"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right">
        <Button
            android:id="@+id/candeo_shout_post_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/candeo_primary_dark"
            android:background="?android:attr/selectableItemBackground"
            android:textSize="12sp"
            android:text="SHOUT"/>

        <Button
            android:id="@+id/candeo_shout_post_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/candeo_primary_dark"
            android:background="?android:attr/selectableItemBackground"
            android:textSize="12sp"
            android:text="CANCEL"/>
    </LinearLayout>




</LinearLayout>