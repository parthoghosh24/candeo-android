<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">
    <TextView
        android:id="@+id/content_description"
        android:text="Some big text what the hell.Some big text what the hell.Some big text what the hell.Some big text what the hell.Some big text what the hell.Some big text what the hell.Some big text what the hell.Some big text what the hell."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">
            <TextView
                android:id="@+id/username"
                android:text="Anonymous"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"/>

            <TextView
                android:id="@+id/timestamp"
                android:text="Today"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="end"/>
    </LinearLayout>

</LinearLayout>
