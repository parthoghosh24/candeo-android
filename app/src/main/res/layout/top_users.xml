<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="All Time Top Creators"/>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="150dp"
           android:orientation="horizontal"
           android:background="@color/candeo_white"
           android:weightSum="3">

           <android.support.v7.widget.CardView
               android:id="@+id/candeo_top_user_1"
               android:layout_weight="1"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:clipToPadding="false"
               app:cardCornerRadius="4dp"
               app:cardUseCompatPadding="true"
               android:layout_margin="3dp"
               app:cardElevation="5dp">
               <FrameLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">

                   <com.android.volley.toolbox.NetworkImageView
                       android:id="@+id/candeo_top_user_1_avatar"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:scaleType="centerCrop"/>

                   <RelativeLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:background="@color/candeo_translucent_black">

                       <LinearLayout
                           android:orientation="horizontal"
                           android:layout_alignParentTop="true"
                           android:gravity="center"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content">
                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="#"
                               android:textSize="25sp"
                               />
                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:textSize="25sp"
                               android:text="1"
                               />

                       </LinearLayout>
                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_centerInParent="true"
                           android:layout_height="wrap_content"
                           android:orientation="vertical"
                           android:gravity="center">


                           <TextView
                               android:id="@+id/candeo_top_user_1_name"
                               android:text="Partho Ghosh"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:gravity="center"
                               android:textSize="13sp"
                               />

                       </LinearLayout>
                   </RelativeLayout>

               </FrameLayout>

           </android.support.v7.widget.CardView>





           <android.support.v7.widget.CardView
               android:id="@+id/candeo_top_user_2"
               android:layout_weight="1"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:clipToPadding="false"
               app:cardCornerRadius="4dp"
               app:cardUseCompatPadding="true"
               android:layout_margin="3dp"
               app:cardElevation="5dp">

               <FrameLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">

                   <com.android.volley.toolbox.NetworkImageView
                       android:id="@+id/candeo_top_user_2_avatar"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:scaleType="centerCrop"/>

                   <RelativeLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:background="@color/candeo_translucent_black">
                       <LinearLayout
                           android:orientation="horizontal"
                           android:layout_alignParentTop="true"
                           android:gravity="center"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content">
                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="#"
                               android:textSize="25sp"
                               />
                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:textSize="25sp"
                               android:text="2"
                               />

                       </LinearLayout>
                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_centerInParent="true"
                           android:layout_height="wrap_content"
                           android:orientation="vertical"
                           android:gravity="center">

                           <TextView
                               android:id="@+id/candeo_top_user_2_name"
                               android:text="Prodipto Ghosh"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:gravity="center"
                               android:textSize="13sp"
                               />

                       </LinearLayout>
                   </RelativeLayout>

               </FrameLayout>



           </android.support.v7.widget.CardView>
           <android.support.v7.widget.CardView
               android:id="@+id/candeo_top_user_3"
               android:layout_weight="1"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:clipToPadding="false"
               app:cardCornerRadius="4dp"
               app:cardUseCompatPadding="true"
               android:layout_margin="3dp"
               app:cardElevation="5dp">

               <FrameLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">

                   <com.android.volley.toolbox.NetworkImageView
                       android:id="@+id/candeo_top_user_3_avatar"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:scaleType="centerCrop"/>

                   <RelativeLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:background="@color/candeo_translucent_black">
                       <LinearLayout
                           android:orientation="horizontal"
                           android:layout_alignParentTop="true"
                           android:gravity="center"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content">
                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="#"
                               android:textSize="25sp"
                               />
                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:textSize="25sp"
                               android:text="3"
                               />

                       </LinearLayout>
                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_centerInParent="true"
                           android:layout_height="wrap_content"
                           android:orientation="vertical"
                           android:gravity="center">

                           <TextView
                               android:id="@+id/candeo_top_user_3_name"
                               android:text="Partho Ghosh"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:gravity="center"
                               android:textSize="13sp"
                               />

                       </LinearLayout>
                   </RelativeLayout>
               </FrameLayout>



           </android.support.v7.widget.CardView>

        </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="More Performances"/>


</LinearLayout>