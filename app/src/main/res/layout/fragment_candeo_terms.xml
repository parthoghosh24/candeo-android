<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <WebView
        android:id="@+id/candeo_terms_web"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        />

    <LinearLayout
        android:id="@+id/candeo_terms_buttons"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/candeo_translucent_black_light"
        android:gravity="right">

        <Button
            android:id="@+id/candeo_terms_accept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/candeo_white"
            android:text="Accept"/>

        <Button
            android:id="@+id/candeo_terms_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="@color/candeo_white"
            android:text="Cancel"/>
    </LinearLayout>

</RelativeLayout>