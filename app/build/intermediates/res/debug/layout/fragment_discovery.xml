<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:orientation="vertical"
        tools:context="com.candeo.app.user.CreatedFragment">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/candeo_user_discoveries_appreciations_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/candeo_primary_dark"
                android:layout_marginLeft="10dp"
                android:text="My Appreciations"/>

            <include layout="@layout/candeo_no_content_single_line"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:id="@+id/candeo_user_discoveries_no_appreciations"/>

            <include layout="@layout/loading_content"
                android:id="@+id/candeo_appreciations_loading_content"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:visibility="gone"
                />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/candeo_user_discoveries_appreciations"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/candeo_user_discoveries_inspirations_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/candeo_primary_dark"
                android:layout_marginLeft="10dp"
                android:text="My Inspirations"/>

            <include layout="@layout/candeo_no_content_single_line"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:id="@+id/candeo_user_discoveries_no_inspirations"/>

            <include layout="@layout/loading_content"
                android:id="@+id/candeo_inspirations_loading_content"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:visibility="gone"
                />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/candeo_user_discoveries_inspirations"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:visibility="gone"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>

