<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/candeo_no_content_single_line_holder"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:padding="20dp"
    android:gravity="center">

    <TextView
        android:id="@+id/candeo_no_content_single_line_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/candeo_light_gray"
        android:textSize="30sp"
        android:text="No"/>
    <TextView
        android:id="@+id/candeo_no_content_single_line_mid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/candeo_light_gray"
        android:layout_marginLeft="5dp"
        android:textSize="30sp"
        android:text="No"/>
    <TextView
        android:id="@+id/candeo_no_content_single_line_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/candeo_light_gray"
        android:layout_marginLeft="5dp"
        android:textSize="30sp"
        android:text="Yet"/>

