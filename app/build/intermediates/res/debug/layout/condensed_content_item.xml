<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:candeo="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="200dp"
    android:layout_height="200dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        app:cardCornerRadius="4dp"
        app:cardUseCompatPadding="true"
        android:layout_margin="3dp"
        app:cardElevation="5dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/candeo_content_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/candeo_translucent_black">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentTop="true">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="5dp"
                        android:gravity="left">

                        <TextView
                            android:id="@+id/candeo_content_appreciate_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="APPRECIATE"
                            android:textSize="15sp"/>

                        <TextView
                            android:id="@+id/candeo_content_appreciate_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3.4K"
                            android:textSize="14sp"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="5dp"
                        android:gravity="right">

                        <TextView
                            android:id="@+id/candeo_showcase_media_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ICON"
                            android:textSize="15sp"/>


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        >


                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/candeo_showcase_user_avatar"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:focusableInTouchMode="true"
                            app:border_width="2dp"
                            app:border_color="#ffffffff"
                            android:visibility="gone"
                            />



                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="center"
                            android:gravity="center">


                            <com.candeo.app.ui.CustomTextView
                                android:id="@+id/candeo_user_name"
                                android:text="Partho Ghosh"
                                candeo:fontName="caviar.ttf"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textSize="13sp"
                                />

                        </LinearLayout>


                        <TextView
                            android:id="@+id/candeo_showcase_title"
                            android:text="My Awesome Creation My Awesome Creation My Awesome Creation "
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:singleLine="false"
                            android:maxEms="50"
                            android:maxLines="2"
                            android:gravity="center"
                            android:textSize="18sp"
                            android:visibility="gone"
                            />


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentBottom="true">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="5dp"
                        android:gravity="left">

                        <TextView
                            android:id="@+id/candeo_content_rank_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="#"
                            android:textSize="15sp"/>

                        <TextView
                            android:id="@+id/candeo_content_rank_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:textSize="12sp"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="5dp"
                        android:gravity="right">

                        <TextView
                            android:id="@+id/candeo_showcase_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="24-August-2015"
                            android:textSize="12sp"/>


                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

        </FrameLayout>

    </android.support.v7.widget.CardView>

</LinearLayout><!-- From: file:/home/dholu/projects/candeo-android/app/src/main/res/layout/condensed_content_item.xml -->