<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.candeo.app.leaderboard.LeaderBoardFragment">

    <TextView
        android:id="@+id/candeo_feed_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:gravity="center"
        android:textSize="20sp"
        android:text="Not Signed In. Sign In to get inspired and follow creators around the world to get their feed." />
    <Button
        android:id="@+id/candeo_feed_sign_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign In"
        android:background="@android:color/holo_blue_light"/>

</LinearLayout>
