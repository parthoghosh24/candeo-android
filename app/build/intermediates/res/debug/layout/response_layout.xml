<LinearLayout
    android:id="@+id/candeo_response_holder"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:minWidth="300dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="5dp"
    android:paddingLeft="5dp"
    android:paddingEnd="5dp"
    android:paddingRight="5dp"
    android:background="@color/candeo_white"
    android:gravity="center"
    tools:context="com.candeo.app.ui.ResponseFragment"
    xmlns:tools="http://schemas.android.com/tools">


    <TextView
        android:id="@+id/candeo_response_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/candeo_primary_dark"
        android:textSize="20sp"/>

    <NumberPicker
        android:id="@+id/candeo_response_chooser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:descendantFocusability="blocksDescendants"
        android:showDividers="none"
        android:gravity="center">
    </NumberPicker>

    <EditText
        android:id="@+id/candeo_response_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="40dp"
        android:textColor="@color/candeo_primary_dark"
        android:textSize="13sp"
        android:textColorHint="@color/candeo_primary"
        android:background="@android:color/transparent"
        android:hint="More Words (Optional - 100 chars Max)"
        android:maxLength="100"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right">
        <Button
            android:id="@+id/candeo_response_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/candeo_primary_dark"
            android:background="?android:attr/selectableItemBackground"
            android:textSize="12sp"
            android:text="Ok"/>

        <Button
            android:id="@+id/candeo_response_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/candeo_primary_dark"
            android:background="?android:attr/selectableItemBackground"
            android:textSize="12sp"
            android:text="CANCEL"/>
    </LinearLayout>




