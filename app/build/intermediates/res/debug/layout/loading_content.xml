<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    android:id="@+id/candeo_progress_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    xmlns:candeo="http://schemas.android.com/apk/res-auto">

   <ProgressBar
       android:id="@+id/candeo_progress_bar"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:padding="10dp"/>

   <TextView
       android:id="@+id/candeo_progress_icon"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:gravity="center"
       android:textSize="60sp"/>

    <com.candeo.app.ui.CustomTextView
        android:id="@+id/candeo_progress_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        candeo:fontName="caviar.ttf"
        android:gravity="center"
        android:textSize="25sp"/>

</LinearLayout><!-- From: file:/home/partho/projects/tools/gmate/projects/candeo-android/app/src/main/res/layout/loading_content.xml -->