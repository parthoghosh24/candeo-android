<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:id="@+id/candeo_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <android.support.v4.view.ViewPager
            android:id="@+id/home_pager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>



        <LinearLayout
            android:id="@+id/candeo_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:weightSum="10"
            android:orientation="horizontal">

            <Button
                android:id="@+id/candeo_feed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="16sp"
                android:background="?android:attr/selectableItemBackground"
                />

            <Button
                android:id="@+id/candeo_shout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="16sp"
                android:background="?android:attr/selectableItemBackground"
                />

            <Button
                android:id="@+id/candeo_limelight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="20sp"
                android:background="?android:attr/selectableItemBackground"
                />

            <Button
                android:id="@+id/candeo_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="16sp"
                android:background="?android:attr/selectableItemBackground"
                />

            <Button
                android:id="@+id/candeo_marketplace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="16sp"
                android:background="?android:attr/selectableItemBackground"
                />

        </LinearLayout>

    </LinearLayout>



</LinearLayout><!-- From: file:/home/dholu/projects/candeo-android/app/src/main/res/layout/activity_home.xml -->