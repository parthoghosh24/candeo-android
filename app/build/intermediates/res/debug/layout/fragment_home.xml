

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.candeo.app.home.HomeActivity"
    android:orientation="vertical"
    android:layout_weight="1"
    >
    <com.candeo.app.ui.NonSwipeablePager
        android:id="@+id/candeo_showcase_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:id="@+id/candeo_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:weightSum="9"
        android:orientation="horizontal">

        <Button
            android:id="@+id/candeo_feed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="?android:attr/selectableItemBackground"
            />
        <Button
            android:id="@+id/candeo_init_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_weight="3"
            android:background="?android:attr/selectableItemBackground"
            />
        <Button
            android:id="@+id/candeo_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_weight="3"
            android:background="?android:attr/selectableItemBackground"
            />

    </LinearLayout>








</LinearLayout>

